---
import { Icon } from 'astro-icon/components'

const {
  name,
  description,
  descriptionTwo,
  img,
  imgAlt,
  githubLink,
  liveDemoLink,
  extraIcons,
} = Astro.props
---

<article
  class={'flex rounded-lg min-h-[222px] max-h-[400px] bg-custom-card shadow transition-transform duration-400 hover:scale-105'}
>
  <aside class="w-[45%] min-h-full overflow-hidden rounded-l-lg">
    <img src={img} alt={imgAlt} class="w-full h-full object-cover" />
  </aside>
  <main class="w-full px-4 py-2">
    <div class="w-full flex items-center justify-between mb-2">
      <h4 class="font-bold sm:text-xl mb-1">{name}</h4>
      <div class="flex gap-1 items-center">
        <a
          href={githubLink}
          title="Ir al repositorio"
          target="_blank"
          rel="noopener noreferrer"
          class="custom-link"><Icon name="tabler:brand-github" size={22} /></a
        >
        <a
          href={liveDemoLink}
          title="Visitar la demo"
          target="_blank"
          rel="noopener noreferrer"
          class="custom-link"><Icon name="tabler:link" size={22} /></a
        >
      </div>
    </div>
    <div class="flex gap-1">
      {extraIcons?.map((icon: string) => <Icon name={icon} size={26} />)}
      <Icon name="skill-icons:html" size={26} />
      <Icon name="skill-icons:css" size={26} />
      <Icon name="skill-icons:tailwindcss-dark" size={26} />
      <Icon name="skill-icons:react-dark" size={26} />
      <Icon name="skill-icons:vite-dark" size={26} />
      <Icon name="skill-icons:bun-dark" size={26} />
    </div>
    <p class="text-xs mt-2 text-secondary-custom-text">{description}</p>
    <p class="text-xs mt-2 text-secondary-custom-text">{descriptionTwo}</p>
  </main>
</article>
