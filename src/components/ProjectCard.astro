---
import { Icon } from 'astro-icon/components'

type Props = {
    imgPath: ImageMetadata,
    imgAlt: string,
    name: string,
    description: string,
    extraIcons?: string[],
    class?: string,
}

const { imgPath, imgAlt, name, description, extraIcons, class: className } = Astro.props
---

<article class={`flex rounded-lg h-[200px] bg-gray-900 shadow transition-transform duration-500 hover:scale-105 ${className || ''}`}>
  <div class="w-1/3 h-full overflow-hidden rounded-l-lg">
    <img src={imgPath.src} alt={imgAlt} class="w-full h-full object-cover object-center scale-120 sm:scale-100" />
  </div>
  <section class="p-4">
    <h4 class="font-bold text-xl mb-2">{name}</h4>
    <div class="flex gap-1">
      {extraIcons?.map((icon) => <Icon name={icon} size={26}/>)}
      <Icon name="skill-icons:html" size={26}/>
      <Icon name="skill-icons:css" size={26}/>
      <Icon name="skill-icons:tailwindcss-dark" size={26}/>
      <Icon name="skill-icons:react-dark" size={26}/>
      <Icon name="skill-icons:vite-dark" size={26}/>
      <Icon name="skill-icons:bun-dark" size={26}/>
    </div>
    <p class="text-xs mt-2">{description}</p>
  </section>
</article>
