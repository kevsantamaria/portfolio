---
import ProjectCard from '@/components/ProjectCard.astro'
import weatherApp from '@/assets/weather-app-screenshot.png'
import pomato from '@/assets/pomato-screenshot.png'
import qrGenerator from '@/assets/qr-code-generator-screenshot.png'
---

<h2 class="font-bold text-xl mb-4">Proyectos</h2>

<section class="grid grid-cols-2 gap-4 mx-auto">
  <div class="grid grid-rows-2 gap-4">
    <ProjectCard 
    imgPath={weatherApp} 
    imgAlt="Screenshot de aplicacion del clima" 
    />
    
    <ProjectCard
      imgPath={qrGenerator}
      imgAlt="Screenshot de aplicacion de generador de codigo QR"
    />
  </div>

  <div>
    <ProjectCard
      imgPath={pomato}
      imgAlt="Screenshot de aplicacion de pomodoro"
      class="h-full row-span-2"
    />
  </div>
</section>
