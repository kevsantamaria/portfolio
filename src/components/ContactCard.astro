---
import { Icon } from 'astro-icon/components'
import CopyEmailBtn from '@/components/ui/CopyEmailBtn'
import DownloadCVBtn from './ui/DownloadCVBtn'
---

<section
  class="container bg-custom-card mt-10 shadow rounded-lg p-4 flex justify-around items-start gap-4"
>
  <main class="flex flex-col items-left">
    <div class="mb-2">
      <h1 class="font-bold text-[22px]">Kevin Santamaria</h1>
      <p class="text-xs text-secondary-custom-text">Desarrollador Frontend</p>
      <p class="text-xs text-secondary-custom-text">+ 1 a√±o de experiencia</p>
    </div>

    <div class="flex flex-col gap-2">
      <CopyEmailBtn client:load />
      <div class="flex gap-1 items-center">
        <a
          href="https://github.com/kevsantamaria"
          title="Perfil de GitHub"
          target="_blank"
          rel="noopener noreferrer"
          class="custom-link"><Icon name="tabler:brand-github" size={22} /></a
        >
        <a
          href="https://www.linkedin.com/in/kevsantamaria/"
          title="Perfil de LinkedIn"
          target="_blank"
          rel="noopener noreferrer"
          class="custom-link"><Icon name="tabler:brand-linkedin" size={22} /></a
        >
        <DownloadCVBtn client:load/>
      </div>
    </div>
  </main>
  <aside class="max-h-[150px] max-w-[150px]">
    <img
      src="/public/assets/voxel-avatar.webp"
      alt="Voxel-art avatar"
      class="h-full w-full object-cover rounded-lg select-none"
    />
  </aside>
</section>
